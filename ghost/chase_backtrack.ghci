    MOV H,255
    MOV [H],6DE6714E
    DEC H
    INT 3
    INT 5
    MOV PC,GET_FIRST_LAMBDAMAN_DIRECTION_AT
6DE6714E:
    MOV [0],A
    MOV [1],B
    INT 3
    INT 6
    MOV A,B
    MOV [H],3EFEA81F
    DEC H
    MOV PC,REVERSE_DIRECTION
3EFEA81F:
    MOV [2],A
    JEQ SECONDARY_DIR,[0],[2]
    INT 3
    INT 5
    MOV C,[0]
    MOV [H],002FD14D
    DEC H
    MOV PC,IS_ADJACENT_COORDINATE_NON_WALL_SQUARE
002FD14D:
    JEQ SECONDARY_DIR,A,0
    MOV A,[0]
    INT 0
    HLT
SECONDARY_DIR:
    JEQ END,[1],[2]
    INT 3
    INT 5
    MOV C,[1]
    MOV [H],F2976A05
    DEC H
    MOV PC,IS_ADJACENT_COORDINATE_NON_WALL_SQUARE
F2976A05:
    JEQ END,A,0
    MOV A,[1]
    INT 8
